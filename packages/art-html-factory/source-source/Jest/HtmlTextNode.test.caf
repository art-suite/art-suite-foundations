import &StandardImport

describe
  basics: ->
    test "new" ->
      node = new HtmlTextNode :div, {class: :fooClass}, [] "string child"
      assert.eq
        node.toString
          indent: ''
          tagWrap: 1
        """
          <div class="fooClass">
            string child
          </div>

    test "style" ->
      node = new HtmlTextNode :div, {style: fontSize: 10pt color: #f00}
      assert.eq node.toString(), """ <div style="fontSize: 10pt; color: #f00"></div>

  updateProps: ->
    test "style" ->
      node = new HtmlTextNode :div, {style: fontSize: 10pt color: #f00}
      node.props = merge node.props, style: fontSize: 5pt
      assert.eq node.toString(), """ <div style="fontSize: 5pt"></div>
