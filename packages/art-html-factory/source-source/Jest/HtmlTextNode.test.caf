import &StandardImport

describe
  basics: ->
    test "new" ->
      node = new HtmlTextNode :div, {class: :fooClass}, [] "string child"
      assert.eq
        node.toString
          indent: ''
          tagWrap: 1
        """
          <div class="fooClass">
            string child
          </div>

    test "style is stringified" ->
      node = new HtmlTextNode :div, style: font-size: 10pt color: #f00
      assert.eq node.toString(), """ <div style="color: #f00; font-size: 10pt"></div>

  updateProps: ->
    test "update style" ->
      node = new HtmlTextNode :div, {style: font-size: 10pt color: #f00}
      node.style = merge node.style, font-size: 5pt
      assert.eq node.toString(), """ <div style="color: #f00; font-size: 5pt"></div>
