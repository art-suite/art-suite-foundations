{
  "author": "Shane Brinkman-Davis Delamore, Imikimi LLC",
  "bugs": "https://github.com/art-suite/art-suite-foundations/issues",
  "dependencies": {
    "ansi-wordwrap": "^1.0.2",
    "art-class-system": "^1.11.14",
    "art-standard-lib": "^1.71.1",
    "colors": "^1.4.0"
  },
  "description": "Art.Cli",
  "devDependencies": {
    "art-build-configurator": "^1.29.4",
    "art-testbench": "^3.2.3",
    "mocha": "^7.2.0",
    "mock-fs": "^4.13.0",
    "npm-watch": "^0.10.0"
  },
  "homepage": "https://github.com/art-suite/art-suite-foundations",
  "jest": {
    "collectCoverageFrom": [
      "build/**/*.js",
      "!build/test/**/*.js"
    ],
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/test"
    ],
    "verbose": true
  },
  "license": "ISC",
  "name": "@art-suite/cli",
  "repository": {
    "type": "git",
    "url": "https://github.com/art-suite/art-suite-foundations.git"
  },
  "scripts": {
    "build": "caf -m -c source -o build\nnpm run nn",
    "build-clean": "# BUILD CLEAN START\n#   - building into: build-temp\n#\nrm -rf ./__build-old__\ncaf -m -c source -o build-temp\nnpm run nn\n\nnn build-temp/*\n\n# BUILD CLEAN FINIALIZING\n#  - replace old build in:   build\n#  - with new build from:    build-temp\n#\nmv build __build-old__\nmv build-temp build\nrm -rf ./__build-old__",
    "clean": "rm -rf build/*",
    "nn": "nn build/* ",
    "test": "npm run nn\njest",
    "watch": "npm-watch"
  },
  "version": "1.3.13",
  "watch": {
    "build": {
      "extensions": [
        "caf"
      ],
      "patterns": [
        "source"
      ],
      "quiet": false
    }
  }
}
