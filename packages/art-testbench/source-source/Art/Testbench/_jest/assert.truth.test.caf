import &StandardImport

test 'assert.true' ->
  assert.true true
  Promise.all array v in null undefined false 1 :true :false '' 0 1 {}
    assert.rejects -> assert.true v

test 'assert.false' ->
  assert.false false
  Promise.all array v in null undefined true 1 :true :false '' 0 1 {}
    assert.rejects -> assert.false v

test 'assert.jsTrue' ->
  assert.jsTrue true
  assert.jsTrue 1
  assert.jsTrue "true"
  assert.jsTrue "false"
  assert.jsTrue {}
  Promise.all array v in false null undefined '' 0
    assert.rejects
      -> assert.jsTrue v
      {} v

test 'assert.jsFalse' ->
  assert.jsFalse false
  assert.jsFalse 0
  assert.jsFalse ''
  assert.jsFalse null
  assert.jsFalse undefined
  Promise.all array v in true 1 "true" "false" 1 {}
    assert.rejects
      -> assert.jsFalse v
      {} v

test 'assert.rubyTrue' ->
  assert.rubyTrue true
  assert.rubyTrue "true"
  assert.rubyTrue "false"
  assert.rubyTrue {}
  assert.rubyTrue ''
  assert.rubyTrue 0
  assert.rubyTrue 1
  Promise.all array v in null undefined false
    assert.rejects
      -> assert.rubyTrue v
      {} v

test 'assert.rubyFalse' ->
  assert.rubyFalse false
  assert.rubyFalse null
  assert.rubyFalse undefined
  Promise.all array v in true 1 "true" "false" 1 0 '' {}
    assert.rejects
      -> assert.rubyFalse v
      {} v
